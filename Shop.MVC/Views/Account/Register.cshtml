@model RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#2962ff">
    <meta name="msapplication-navbutton-color" content="#2962ff">
    <meta name="apple-mobile-web-app-status-bar-style" content="#2962ff">
    <title>YektaKala | login-register</title>
    <link rel="stylesheet" href="/Template/theme-assets/css/dependencies.css">
    <link rel="stylesheet" href="/Template/theme-assets/css/theme.css">
    <link rel="stylesheet" href="/Template/theme-assets/css/custom.css">

    <link rel="stylesheet" href="/Template/theme-assets/css/notifications.css">
    <link rel="stylesheet" href="/Template/theme-assets/css/custom.css">
    <style>
        #Email:-moz-placeholder {
            text-align: right;
        }

        #Email:-ms-input-placeholder {
            text-align: right;
        }

        #Email::-webkit-input-placeholder {
            text-align: right;
        }
    </style>
</head>

<body>

    <div class="page-wrapper">
        <header class="page-mini-header py-4">
            <div class="d-flex justify-content-center">
                <div class="logo-container">
                    <a href="#" class="logo"><img src="./Template/theme-assets/images/logo-dark.svg" width="120" alt=""></a>
                </div>
            </div>
        </header>
        <main class="page-content page-auth">
            <!-- start of auth-container -->
            <div class="auth-container">
                <div class="auth-title mb-3">ثبت نام</div>
                <!-- start of auth-box -->
                <div class="auth-box ui-box">
                    <!-- start of auth-form -->
                    <form asp-controller="Account" asp-action="Register" method="post" class="auth-form">
                        <!-- start of form-element -->
                        <div class="form-element-row mb-5">
                            <input asp-for="Email" class="form-control" placeholder="ایمیل">
                            <span asp-validation-for="Email" style="color:red;"></span>
                        </div>
                        <!-- end of form-element -->
                        <!-- start of form-element -->
                        <div class="form-element-row mb-5">
                            <input asp-for="FullName" class="form-control" placeholder="نام و نام خانوادگی">
                            <span asp-validation-for="FullName" style="color:red;"></span>
                        </div>
                        <!-- end of form-element -->
                        <!-- start of form-element -->
                        <div class="form-element-row mb-5">
                            <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور">
                            <span asp-validation-for="Password" style="color:red;"></span>
                        </div>
                        <!-- end of form-element -->
                        <!-- start of form-element -->
                        <div class="form-element-row mb-5">
                            <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار کلمه عبور">
                            <span asp-validation-for="RePassword" style="color:red;"></span>
                        </div>
                        <!-- end of form-element -->
                        <!-- start of form-element -->
                        <div class="form-element-row mb-3">
                            <button class="btn btn-primary">ادامه</button>
                        </div>
                        <!-- end of form-element -->
                        <!-- start of form-element -->
                        <div class="form-element-row">
                            <div>
                                با ورود و یا ثبت نام در سایت شما <a href="#" class="link">
                                    شرایط و
                                    قوانین
                                </a> استفاده
                                از تمام سرویس های
                                سایت و <a href="#" class="link">قوانین حریم خصوصی</a> آن را می‌پذیرید.
                            </div>
                        </div>
                        <!-- end of form-element -->
                    </form>
                    <!-- end of auth-form -->
                </div>
                <!-- end of auth-box -->
            </div>
            <!-- start of auth-container -->
        </main>
        <footer class="page-mini-footer">
            <div class="d-flex justify-content-center py-5">
                <div class="logo-container">
                    <a href="#" class="logo"><img src="./Template/theme-assets/images/logo-dark.svg" width="120" alt=""></a>
                </div>
            </div>
            <div class="copy-right bg-light py-3">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="text-muted text-md-start text-center">
                                کليه حقوق اين سايت متعلق به echo_designer
                                می‌باشد.
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-muted text-md-end text-center">echo_designer - 2021 © Copyright</div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="/Template/theme-assets/js/dependencies/jquery-3.6.0.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/bootstrap.bundle.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/bootstrap-slider.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/jquery.countdown.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/jquery.simple.timer.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/iziToast.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/fancybox.umd.js"></script>
    <script src="/Template/theme-assets/js/dependencies/nouislider.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/wNumb.js"></script>
    <script src="/Template/theme-assets/js/dependencies/remodal.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/select2.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/simplebar.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/swiper-bundle.min.js"></script>
    <script src="/Template/theme-assets/js/dependencies/zoomsl.min.js"></script>
    <script src="/Template/theme-assets/js/theme.js"></script>
    

    <script src="/Template/theme-assets/js/notifications.js"></script>
    <script src="/Template/theme-assets/js/custom.js"></script>
    <partial name="_SiteMessages" />
</body>

</html>sss

