@model CreateOrEditProductCategoryViewModel
@{
    if (Model != null && Model.ParentId != null)
    {
        ViewData["Title"] = $"ایجاد زیر گروه برای دسته بندی : {Model.ParentTitle}";
    }
    else
    {
        ViewData["Title"] = "ایجاد دسته بندی";
    }
}

@section Breadcrumb {
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">خانه</a>
            </li>
            <li class="active">
                @ViewData["Title"]
            </li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
}

<div class="col-xs-8">
    <div class="well with-header">
        <div class="header bordered-sky">
            @ViewData["Title"]
        </div>
        <form asp-area="Admin" asp-controller="ProductCategory" asp-action="CreateProductCategory" method="post">
            <input type="hidden" asp-for="ParentId" />
            <div class="form-group">
                <label>عنوان</label>
                <input class="form-control" asp-for="Title">
                <span class="text-danger" asp-validation-for="Title" style="margin-bottom:10px; display:block;"></span>
            </div>
            <hr />

            <button type="submit" class="btn btn-success btn-block">ثبت دسته بندی</button>
        </form>
    </div>
</div>
