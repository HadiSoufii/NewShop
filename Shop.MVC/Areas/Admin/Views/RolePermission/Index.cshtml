@model List<Role>
@{
    ViewData["Title"] = "نقش ها";
}

@section Breadcrumb {
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">خانه</a>
            </li>
            <li class="active">داشبورد</li>
        </ul>
    </div>
    <!-- /Page Breadcrumb -->
}


<div class="col-xs-8">
    <div class="well with-header with-footer">
        <div class="header bordered-sky">
            @ViewData["Title"]
        </div>
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>عنوان نقش</th>
                        <th>دستورات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.RoleTitle</td>
                            <td>
                                @if(role.IsDelete)
                                {
                                    <p class="text-danger">این نقش حذف شده است</p>
                                }
                                else
                                {
                                    <a asp-controller="RolePermission" asp-action="EditRolePermission" asp-route-roleId="@role.Id" class="btn btn-warning btn-sm">ویرایش</a>
                                    <a asp-controller="RolePermission" asp-action="DeleteRolePermission" asp-route-roleId="@role.Id" class="btn btn-danger btn-sm">حذف</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <partial name="_NoItemFound" />
        }
        <div class="footer">
            @*<partial name="_AdminPagingPartial" model="@Model.GetCurrentPaging()" />*@
        </div>
    </div>
</div>