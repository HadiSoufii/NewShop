@model EditUserPanelViewModel
@{
    ViewData["Title"] = "EditUser";
}

<div class="row mb-5">
    @await Component.InvokeAsync("UserSidebar")
    <div class="col-xl-9 col-lg-8 col-md-7">
        <div class="alert alert-warning alert-dismissible fade show mb-5" role="alert">
            <div>
                سفارش شما در انتظار پرداخت است. برای جلوگیری از لغو سفارش، لطفا پرداخت را انجام دهید.
                <a href="#" class="btn btn-sm btn-primary mx-3">سفارش های من</a>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <div class="ui-box bg-white mb-5">
            <div class="ui-box-title">اطلاعات شخصی</div>
            <div class="ui-box-content">
                <form asp-area="UserPanel" asp-controller="UserPanel" asp-action="EditUser" enctype="multipart/form-data">
                    <div class="row">
                        @if (TempData["SuccessEdit"] != null && (bool)TempData["SuccessEdit"] == true)
                        {
                            <div class="alert alert-success p-5 m-3">
                                اطلاعات شما با موفقیت ویرایش شد
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger p-5 m-3">
                                در ویرایش اطاعات خطایی رخ داد
                            </div>
                        }
                        <input type="hidden" asp-for="ImageName" />
                        <div class="form-element-row mb-3">
                            <label class="label fs-7">نام و نام خانوادگی</label>
                            <input asp-for="FullName" type="text" class="form-control" placeholder="نام و نام خانوادگی">
                        </div>
                        <div class="form-element-row mb-3">
                            <label class="label fs-7">موبایل</label>
                            <input asp-for="Mobile" type="text" class="form-control" placeholder="موبایل">
                        </div>
                        <div class="form-element-row mb-3">
                            <img src="@(Model.ImageName != null ? PathExtension.UserAvatarThumb+Model.ImageName:PathExtension.DefaultAvatar)" alt="avatar" width="150" height="150">
                        </div>
                        <div class="form-element-row mb-3">
                            <input type="file" />
                        </div>
                        <button class="btn btn-info p-2 w-25" type="submit">
                            ویرایش
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>